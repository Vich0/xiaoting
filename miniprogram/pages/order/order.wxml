<!--pages/orderManage/order.wxml-->
<!--pages/mainpage/mainpage.wxml-->
<view class="top">
  <view class="topContent">
    <van-search class="search" value="{{ value }}" placeholder="请输入搜索关键词" /> 
  </view>
</view>

<view class="mid">
  <van-checkbox-group value="{{ result }}" bind:change="onChangeCell">
  <van-cell-group  
    wx:for="{{Data_Deals}}" 
    wx:key="index" 
    value-class="value-class"
    clickable
    data-index="{{ index }}"
    bind:click="toggle">
    <van-cell center  class="item">
        <div class="cloth"  slot="title">
            <van-card
                desc-class="desc-class"
                desc="下单时间：{{item.Order_date}}{{'\\n'}}预约时间：{{item.month}}月{{item.Day}}日"
                title="{{item.Dress_name}}" 
                class="van-card-full"
                thumb="{{item.URL}}">
                <view slot="tags">
                  状态：
                  <van-tag type="{{item.tag}}">{{item.Status}}</van-tag>
                  <!-- <van-tag type="primary">已确认</van-tag>
                  <van-tag type="success">已完成</van-tag>
                  <van-tag type="danger">已取消</van-tag> -->
                </view>
                 <view slot="footer">
                  <van-button size="mini" data-index="{{ index }}" bind:click="onCancel">取消</van-button>
                  <van-button size="mini" data-index="{{ index }}" bind:click="onConfirm">确认</van-button>
                  <van-button size="mini" data-index="{{ index }}" bind:click="onComplete">完成</van-button>
                </view>
            </van-card>
        </div>
        
        <view class="choose" slot="right-icon" hidden="{{hideChoose}}">
            <van-checkbox 
            icon-size="25px" 
            catch:tap="noop"
            class="checkboxes-{{ index }}"
            name="{{ index }}"/>
      </view>
    </van-cell>
  </van-cell-group>
</van-checkbox-group>
</view>



<view class="bottom">
  <view class="bottomContent">
    <view class="manage" style="display:{{showMng}};">
      <!-- style="display:{{showMng}};" -->
      <van-cell center >
      <view slot="icon">
        <van-checkbox 
          icon-size="25px" 
          value="{{ allChecked }}" 
          bind:change="onChangeAllChk">全选</van-checkbox>
      </view>
      <view>
        <van-button 
          round slot="value" 
          type="info" 
          color="linear-gradient(to right, #4bb0ff, #6149f6)" 
          bind:click="onClickButton">删除</van-button>
      </view>
      </van-cell>
    </view>
  </view>
</view>


