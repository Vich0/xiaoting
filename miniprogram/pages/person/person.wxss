/* pages/person/person.wxss */
page{
  height: 100%;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: white;
}

.top{
  height: 25%;
  border-radius: 3%;
  margin: 5%;
  margin-bottom: 3%;
  background: -webkit-linear-gradient(top,rgb(209, 1, 1),#ffc26e,white);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.img{
  height: 70px;
  width: 70px;
  border-radius: 10%;
  background-color: white;
  margin-bottom: 7%;
}

.login{
  display: flex;
  flex-direction: column;
  padding: 50px;
  height: 100px;
}

.loginItem{
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  align-items: center;
  width: 250px;
}

.loginButton{
  display: flex;
  justify-content:center;
  margin-top: 20px;
}

.avatar-wrapper{
  margin: 0px;
  height: 70px;
  padding-right: 0%;
  padding-left: 0%;
}

.weui-input{
  width: 100px;
  text-align: center
}